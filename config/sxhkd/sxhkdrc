

# reloads sxhkd configuration:
super + Escape
    pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config' -t 1500

# Launch Terminal
super + Return
    alacritty

# Hide or Unhide Polybar
super + p
	sh $HOME/.local/bin/toggle-polybar

# Set random wallpaper
super + w
	sh $HOME/.local/bin/random_wallpaper

# Change language
Alt_L + shift
	sh $HOME/.local/bin/change_language.sh

Shift_L + alt
	sh $HOME/.local/bin/change_language.sh

# Launch Rofi Menu
super + {r,d,x}
    {rofi -show run,rofi -show drun,sh $HOME/.local/bin/powermenu}

# Launch Applications
super + shift + {1,q,a,z,2,w,s,x,3,e,d,c,4,r,f,v,5,t}
	{google-chrome-stable, \
	telegram-desktop, \
	sh $HOME/pycharm-2023.2.6/bin/pycharm.sh, \
	pavucontrol, \
	thunar, \
	code, \
	sh $HOME/.local/bin/xcolor-pick, \
	lutris, \
	deluge, \
	obs}

super + l
    sh $HOME/.local/bin/screen-lock

# Select window to close
ctrl + super + alt + k
	{xkill}

# Volume controls
XF86Audio{RaiseVolume,LowerVolume,Mute}
    sh $HOME/.local/bin/volume{ --up, --down, --toggle}

# Brightness controls
XF86MonBrightness{Up,Down}
    sh $HOME/.local/bin/brightness{ --up, --down}

# screenshot
Print
    flameshot gui

#
#
# BSPWM HOTKEYS
#
#

# quit/restart bspwm
ctrl + shift + {q,r}
    bspc {quit,wm -r}

# close and kill
super + c
    bspc node -c

# alternate between the tiled and monocle layout
super + space
	bspc node -t "~"{floating,tiled}


#
# state/flags
#

# Move to next/prev desktop
super + {Left,Right}
	bspc desktop -f {prev,next}

# Select desktop
super + {1-9}
    bspc desktop -f {1-9}


# set the window state
super + {t,ctrl + t,f}
	bspc node -t {tiled,pseudo_tiled,fullscreen}


# Change focus to next window, including floating window
alt + {_,shift + }Tab
    bspc node -f {next.local,prev.local}

#
# focus/swap
#

# MOVE APP TO NEXT DESKTOP
super + shift + {Left,Right}
    bspc node -d {prev,next}.local --follow;


# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

#
# preselect
#

# preselect the ratio
super + ctrl + {1-9,0}
	bspc node -o 0.{1-9,0001}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# Expanding windows
super + control {h,j,k,l}
    bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20} 

# Send the window to another edge of the screen
super + {_,alt + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window
